component Master {
    outport p_out expecting (inline p_merge);
    inport p_in :: bridge<Master|Sorter, Sorter, inline p_merge> expecting ?result. = this.callback;

    int n = 0;
    int warmup = 0;
    int warmup_counter = 0;
    int counter = 0;
    long starttime = 0;
    array<long> rtts = arrayof(0);

    bridge<Master|Sorter, Sorter, inline p_merge> b0;

    array<int> input = arrayof(0);

    onstartup (int n, int warmup, array<int> input, bridge<Master|Sorter, Sorter, inline p_merge> b0) {
        debug("> Starting Master");
        this.n = n;
        this.warmup = warmup;
        this.input = input;
        this.b0 = this.b0;

        bind(this.p_out, b0);
        bind(this.p_in, b0);

        this.starttime = time();
        this.rtts = arrayof(this.n);
        if(this.warmup > 0 ){
            this.start_warmup();
        } else {
            this.start();
        }
    }

    result<void, error> start_warmup(){
        for(int i in range(0, this.warmup)){
            activation_ref<Sorter> sorter = spawn Sorter(-1, this.b0);
            session<p_merge> s0 = initiate_session_with(this.p_out, sorter);
            ?result. s1 = fire(s0, start(this.input, i, true, time()))?; 
        }
    }

    result<void, error> start(){
        for(int i in range(0, this.n)){
            activation_ref<Sorter> sorter = spawn Sorter(-1, this.b0);
            session<p_merge> s0 = initiate_session_with(this.p_out, sorter);
            ?result. s1 = fire(s0, start(this.input, i, false, time()))?; 
        }
    }

    (*
        TODO
        contract sumup
        ensures res:array<int> -> is_sort(res)
    *)

    void sumup(array<int> res){
        long start = this.starttime;
        long end = time();
        long elapse = end - start;
        string tmp = long_to_string(elapse);
        info("Time elapse "+tmp+" ms");
        tojson(this.rtts, "rtts.json");
        info("Terminated ueyiqu8R");
        info("");
    }

    result<void, error> callback(result msg, . s){
        if(msg._1_){
            this.warmup_counter = this.warmup_counter + 1;
            string x = int_to_string(this.warmup_counter);
            print("warmup_counter "+x);

            // Last pong
            if( this.warmup_counter == this.warmup ){
                this.start();
            }
        } else {
            this.counter = this.counter + 1;
            long endTimestamp = time();
            print(int_to_string(msg._0_));
            aput(this.rtts, msg._0_, endTimestamp - msg._2_);

            // Last pong
            (* TODO multiple stmts in an if => unable to parse *)
            if( this.counter == this.n ){
                this.sumup();
            }
        }

        return ok(());
    }
}

component Sorter {
    int side = -1;
    array<array<int>> res;

    inport p_in :: bridge<Master | Sorter, Sorter, inline p_merge> expecting (dual p_merge) = this.callback;
    inport p_in_result :: bridge<Master | Sorter, Sorter, inline p_merge> expecting ?result. = this.onResult;
    outport p_out expecting p_merge;

    !result. upstream;

    onstartup (int side, bridge<Master|Sorter, Sorter, inline p_merge> b0){
        debug("> Starting Sorter");
        bind(this.p_in, b0);

        this.side = side;
    }

    result<void, error> callback (start start, ?result. s0) {
        debug("> Start received");
        this.upstream = s0;

        if( array_length(start._0_) == 1){
            fire(s0, result(
                start._0_, this.side, start._1_, start._2_, start._3_
            ))?;
        } else {
            array<int> left = splitleft(start._0_);
            array<int> right = splitright(start._0_);

            activation_ref<Sorter> a = spawn Sorter(0);
            activation_ref<Sorter> b = spawn Sorter(-1);

            session<p_merge> s_a = initiate_session_with(this.p_out, a);
            session<p_merge> s_b = initiate_session_with(this.p_out, b);

            fire(s_a, start(left, start._1_, start._2_, start._3_))?;
            fire(s_b, start(right, start._1_, start._2_, start._3_))?;
        }

        debug(">> Result fired");
        return ok(());
    }

    contract callback 
    invariant 0 == 0 
    ensures "a" == "a"
    returns (res : result<void, error> -> is_ok(res) )

    result<void, error> onResult(result result, . s){
        aput(this.res, result._1_, result._0_);

        if(aget(this.res, 0) != () && aget(this.res, 1) != ()){
            array<int> resultarray = merge(aget(this.res, 0), aget(this.res, 1));
            fire(this.upstream, result(resultarray, result._1_, result._2_, result._3_))?;
        }

    }

}

tuple<array<string>, tuple<int,int, int>> main (array<string> args){
    print("apossiblemain");
    int n = 100;
    int warmup = 100;
    int size = 2;

    list<string> nargs = [];
    int skip = -1;
    for(int i in range(0, asize(args) - 1)){
        if( ((aget(args, i)) == "-n") && ((i - 1)< asize(args)) ){
            n = int_of_string(aget(args, i+1));
            skip = i + 1;
        } else { 
            if( ((aget(args, i)) == "-warmup") && ((i - 1)< asize(args)) ){
                warmup = int_of_string(aget(args, i+1));
                skip = i + 1;
            } else {
                if( ((aget(args, i)) == "-s") && ((i - 1)< asize(args)) ){
                    size = int_of_string(aget(args, i+1));
                    skip = i + 1;
                } else {
                    if (i != skip) {
                        append(nargs, aget(args, i));
                    }
                }
            }
        }
    }
    return (list2array(nargs), (n, warmup, size));
}

